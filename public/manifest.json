{
  "manifest_version": 3,
  "name": "Magic",
  "version": "0.0.1",
  "description": "A Beautiful, Simple, Wallet for Everyone!",
  "permissions": ["storage"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/magic_logo_16.png",
    "32": "icons/magic_logo_32.png",
    "48": "icons/magic_logo_48.png",
    "128": "icons/magic_logo_128.png"
  }
}
